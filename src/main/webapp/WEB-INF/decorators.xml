<decorators defaultdir="/WEB-INF/views/layouts">

	<!-- Trang Login -->
	<decorator name="login" page="login_master.jsp">
		<pattern>/login</pattern>
	</decorator>
	<decorator name="access_denied" page="login_master.jsp">
		<pattern>/access_denied</pattern>
	</decorator>



	<!-- Phần Member -->
	<decorator name="user" page="user.jsp">
		<pattern>/user/*</pattern>
	</decorator>
	
	
	
	<!-- Phần Project Manager -->
	<decorator name="pm" page="project_manager.jsp">
		<pattern>/pm/*</pattern>
	</decorator>
	
	
	
	<!-- Phần Account Manager -->
	<decorator name="am" page="account_manager.jsp">
